<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.appspot.bootstrap4gwt.client.ui">
    <ui:style>
        
    </ui:style>
    <g:HTMLPanel>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Button</th>
                    <th>Class</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <b:Button text="Default" />
                    </td>
                    <td>
                        <code>com.appspot.bootstrap4gwt.client.ui.Button</code>
                    </td>
                    <td>Standard gray button with gradient</td>
                </tr>
                <tr>
                    <td>
                        <b:ButtonPrimary text="Primary" />
                    </td>
                    <td>
                        <code>com.appspot.bootstrap4gwt.client.ui.ButtonPrimary</code>
                    </td>
                    <td>Provides extra visual weight and identifies the primary action in a set
