<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:p1="urn:import:com.google.gwt.user.cellview.client" xmlns:b="urn:import:com.appspot.bootstrap4gwt.client.ui">
    <ui:style>
        .panel {
        	display: inline;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:FormPanel ui:field="form" styleName="form-horizontal">
            <g:HTMLPanel>
                <fieldset>
                    <div class="control-group">
                        <label class="control-label">Age</label>
                        <div class="controls">
                            <b:TextBox ui:field="age" />
                            <span class="help-inline">age must be number.</span>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Name</label>
                        <div class="controls">
                            <b:TextBox ui:field="name" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Address</label>
                        <div class="controls">
                            <b:TextBox ui:field="address" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="sex">Sex</label>
                        <div class="controls">
                            <g:ListBox ui:field="sex" styleName="medium">
                                <g:item value="Man">Man</g:item>
                                <g:item value="Female">Female</g:item>
                                <g:item value="Other">Other</g:item>
                            </g:ListBox>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <div class="form-actions">
                        <b:Button ui:field="button" text="send" />
                        <b:Button ui:field="cancel" text="cancel" />
                    </div>
                </fieldset>
            </g:HTMLPanel>
        </g:FormPanel>
        <b:Pagination>
            <g:Anchor styleName="prev" text="prev" ui:field="prev" />
            <g:FlowPanel ui:field="pagingPanel" styleName="{style.panel}" />
            <g:Anchor styleName="next" text="next" ui:field="next" />
        </b:Pagination>
        <p1:CellTable ui:field="cellTable" styleName="table table-striped" pageSize="5" />
    </g:HTMLPanel>
</ui:UiBinder>
